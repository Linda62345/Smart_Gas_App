<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GasExchange"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout6"
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gasCompanyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="瓦斯行名稱"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/curentGasVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:text="目前累計殘氣：0 公斤"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:columnCount="2">

                <TextView
                    android:id="@+id/exchangeStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兌換種類"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1" />

                <Spinner
                    android:layout_gravity="end"
                    android:id="@+id/exchange_weight_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="136dp"
                    android:minHeight="48dp"
                    android:entries="@array/weight_options"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1" />


                <TextView
                    android:id="@+id/exchangeQtyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="數量"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1" />

                <EditText
                    android:layout_gravity="end"
                    android:id="@+id/editTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:hint="數量"
                    android:ems="10"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/exchangePriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changable_exchangePrice"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_gravity="end"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:textStyle="bold"/>
            </GridLayout>

            <Button
                android:id="@+id/confirm_exchange_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minWidth="277dp"
                android:minHeight="66dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="67dp"
                android:layout_marginBottom="50dp"
                android:text="確認兌換"
                android:textStyle="bold"/>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>