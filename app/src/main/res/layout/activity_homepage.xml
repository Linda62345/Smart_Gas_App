<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pointTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="318dp"
                android:text="@string/point"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/changable_pointButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/changable_pointButton"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="18dp"
                    android:drawableLeft="@drawable/baseline_card_giftcard_24"
                    android:text="@string/changablePoint" />

                <Button
                    android:id="@+id/loginFromHome"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="151dp"
                    android:backgroundTint="@color/white"
                    android:text="登出"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/Slider"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true" />


            <LinearLayout
                android:id="@+id/progressLayout"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/corners"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="43dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/baseline_propane_tank_gray" />

                    <TextView
                        android:id="@+id/usedGasProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:gravity="left|center"
                        android:text="瓦斯已用："
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="110dp"
                        android:layout_height="54dp"
                        android:gravity="left|center"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/seeMoreButton"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:backgroundTint="#BED5F9"
                        android:text="更多"
                        android:textColor="#F44336" />
                </LinearLayout>


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:progressDrawable="@drawable/custom_progress_bg"
                    android:progressTint="#2196F3" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currentVol_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginRight="8dp"
                        android:text="@string/currentVolume"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/changableVol_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:gravity="center|start"
                        android:layout_marginRight="8dp"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/currentVol_metre"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:gravity="center"
                        android:text="%"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currentVol_cubic"
                        android:layout_width="11dp"
                        android:layout_height="18dp"
                        android:text=""
                        android:layout_gravity="start"
                        android:textColor="@color/black"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:id="@+id/gridLayoutButtons"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="45dp"
                android:columnCount="3"
                android:rowCount="4"
                android:useDefaultMargins="true">

                <ImageButton
                    android:id="@+id/buyGasButton"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:backgroundTint="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_shopping_cart_24" />

                <ImageButton
                    android:id="@+id/findOrderListButton"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_search_24" />

                <ImageButton
                    android:id="@+id/iotButton"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_wifi_tethering_24" />

                <TextView
                    android:id="@+id/buyGasButtonTextView"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/buyGasString"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="18dp"
                    tools:layout_editor_absoluteY="28dp" />

                <TextView
                    android:id="@+id/findOrderListTextView"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/searchOrderList"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="18dp"
                    tools:layout_editor_absoluteY="28dp" />

                <TextView
                    android:id="@+id/iotTextView"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="我的 IOT"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="18dp"
                    tools:layout_editor_absoluteY="28dp" />


                <ImageButton
                    android:id="@+id/companyButton"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_location_on_24" />

                <ImageButton
                    android:id="@+id/myIDButton"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/baseline_line_weight_24" />

                <TextView
                    android:id="@+id/myIotButton"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/companyTextView"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/findCompany"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/myIDTextView"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/myBarcode"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>