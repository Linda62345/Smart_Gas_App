<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="18dp"
    android:orientation="vertical"
    tools:context=".SearchOrderResult">

    <GridLayout
        android:id="@+id/TableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:paddingRight="15dp"
        android:background="@android:color/white"
        android:backgroundTint="#ffececec"
        android:columnCount="2"
        android:rowCount="5"
        app:backgroundTint="#ffffffff">


        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/CustomerName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changable_customer_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6.0dp"
            android:text="@string/contactNo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changable_contactNumber"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/deliveryAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6.0dp"
            android:text="@string/deliveryAddress"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changable_deliveryAddress"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/gasDeliveryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6.0dp"
            android:text="配送方法: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changable_deliveryType"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/gasQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:text="@string/gasQuantity"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changable_gasQTY"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/predictionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="預約時間："
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:textSize="24.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/changable_time"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginStart="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ff757575"
            android:layout_marginBottom="20dp"
            android:textSize="24.0sp"
            android:textStyle="" />
    </GridLayout>

    <ListView
        android:id="@+id/list_item"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"/>

    <Button
        android:id="@+id/confirmOrder"
        android:layout_width="186.3dp"
        android:layout_height="70.9dp"
        android:backgroundTint="#3272D7"
        android:backgroundTintMode="src_over"
        android:layout_gravity="center"
        android:shadowColor="#ff2c2c2c"
        android:text="@string/confirmString"
        android:textColor="#ffffff"
        android:textSize="20.0sp"
        android:textStyle="bold" />


</LinearLayout>